<?php

/**
 * @file
 * Set up the DF 404/403 Scenario.
 */

/**
 * Implements hook_install().
 */
function dfs_404_install() {

  // Set front page to "home" and set site name to "Inspace"
  \Drupal::configFactory()
    ->getEditable('system.site')
    ->set('page.front', '/admin/structure/scenarios')
    ->set('page.403', '/df/403')
    ->set('page.404', '/df/404')
    ->save(TRUE);
}